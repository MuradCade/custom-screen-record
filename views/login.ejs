<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-12 mx-auto">
            <div class="card mt-4">
                <h4 class="card-header">
                   Login
                </h4>
                <div class="card-body">
                    <form action="/authenticate" method="POST">
                        <div class="form-group mb-1">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" placeholder="Enter Email" name="uemail"/>
                        </div>
                        <div class="form-group mb-2">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" placeholder="Enter Password" name="upwd"/>
                        </div>
                        <button class="btn btn-primary btn-sm text-white fw-bold">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>